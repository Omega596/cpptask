{
	"name": "cpptask",
	"displayName": "C/C++ Build Task",
	"description": "Multi-file Build task for debugging C/C++",
	"version": "0.0.1",
	"main": "./out/extension.js",
	"engines": {
		"vscode": "^1.48.0"
	},
	"categories": [
		"Other"
	],
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p .",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p .",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"activationEvents": [
		"onStartupFinished"
	],
	"contributes": {
		"taskDefinitions": [
			{
				"type": "cpp",
				"required": [
					"sources",
					"output"
				],
				"properties": {
					"sources": {
						"type": "array",
						"description": "%c_cpp.taskDefinitions.sources.description%"
					},
					"output": {
						"type": "string",
						"description": "%c_cpp.taskDefinitions.output.description%"
					},
					"compilerPath": {
						"type": "string",
						"default": "g++",
						"description": "%c_cpp.taskDefinitions.compilerPath.description%"
					},
					"compilerArgs": {
						"type": [
							"array",
							"null"
						],
						"items": {
							"type": "string"
						},
						"default": [
							"-g"
						],
						"description": "%c_cpp.taskDefinitions.compilerArgs.description%"
					},
					"includePath": {
						"type": [
							"array"
						],
						"description": "%c_cpp.taskDefinitions.includePath.description%"
					},
					"libraryPath": {
						"type": [
							"array"
						],
						"description": "%c_cpp.taskDefinitions.libraryPath.description%"
					},
					"options": {
						"type": "object",
						"description": "%c_cpp.taskDefinitions.options.description%",
						"properties": {
							"cwd": {
								"type": "string",
								"description": "%c_cpp.taskDefinitions.options.cwd.description%"
							}
						}
					}
				}
			}
		]
	},
	"dependencies": {
		"globby": "^11.0.0",
		"lodash.merge": "^4.6.0",
		"slash": "^3.0.0"
	},
	"devDependencies": {
		"@types/lodash.merge": "^4.6.0",
		"@types/mocha": "^8.0.0",
		"@types/node": "^10.0.0",
		"@types/vscode": "^1.48.0",
		"@typescript-eslint/eslint-plugin": "^3.8.0",
		"@typescript-eslint/parser": "^3.8.0",
		"eslint": "^7.6.0",
		"mocha": "^8.0.1",
		"ts-node": "^8.10.2",
		"typescript": "^3.8.2",
		"vscode-test": "^1.4.0"
	}
}
